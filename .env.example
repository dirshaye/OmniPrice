# Environment Configuration for OmniPriceX

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017
MONGO_DB=omnipricex

# JWT & Authentication
JWT_SECRET=your-super-secret-key-here-replace-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key-here

# Redis & RabbitMQ
REDIS_URL=redis://localhost:6379/0
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# AWS Configuration (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Service Hosts (for Docker Compose)
PRODUCT_SERVICE_HOST=product-service
PRICING_SERVICE_HOST=pricing-service
SCRAPER_SERVICE_HOST=scraper-service
COMPETITOR_SERVICE_HOST=competitor-service
LLM_ASSISTANT_SERVICE_HOST=llm-assistant-service
AUTH_SERVICE_HOST=auth-service

# Development
DEBUG=true
LOG_LEVEL=info

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=OmniPriceX
DEBUG=True
ENVIRONMENT=development

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Scraping Configuration
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
SCRAPER_DELAY_MIN=1
SCRAPER_DELAY_MAX=3
SCRAPER_TIMEOUT=30

# Prometheus Metrics
METRICS_ENABLED=True
METRICS_PORT=8001

# AWS Configuration (for deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=omnipricex-data

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/omnipricex.log
