# Environment Configuration for OmniPriceX

# MongoDB Atlas Configuration
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/omnipricex?retryWrites=true&w=majority
MONGODB_DB_NAME=omnipricex

# JWT & Authentication
SECRET_KEY=your-super-secret-key-here-replace-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key-here

# Celery & Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=OmniPriceX
DEBUG=True
ENVIRONMENT=development

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Scraping Configuration
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
SCRAPER_DELAY_MIN=1
SCRAPER_DELAY_MAX=3
SCRAPER_TIMEOUT=30

# Prometheus Metrics
METRICS_ENABLED=True
METRICS_PORT=8001

# AWS Configuration (for deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=omnipricex-data

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/omnipricex.log
